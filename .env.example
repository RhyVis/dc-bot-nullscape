# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application/Client ID
CLIENT_ID=your_client_id_here

# NovelAI API Key
NAI_API_KEY=your_novelai_api_key_here

# NovelAI Base URL (optional)
NAI_BASE_URL=https://image.novelai.net

# NovelAI 限制模式 (Opus 1024x1024 以下无限额度)
# 设为 true/1/yes 时，会自动把生成尺寸限制在 1024x1024 以内
NAI_LIMIT_MODE=false

# LLM Configuration (OpenAI Compatible)
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# 管理员用户 ID，逗号分隔
ADMIN_USER_IDS=your_admin_user_ids_comma_separated

# 速率限制：每分钟允许的请求数（默认 3）
RATE_LIMIT_PER_MIN=3
